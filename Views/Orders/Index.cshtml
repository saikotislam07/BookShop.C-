@model IEnumerable<BookShop.Models.Order>

<h2>Orders</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add Order</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Book</th>
            <th>Shop</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Order Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Customer.Name</td>
                <td>@order.BookInShop.Book.Title</td>
                <td>@order.BookInShop.Shop.Name</td>
                <td>@order.Quantity</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <!-- Edit/Delete buttons -->
                    <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
