@model BookShop.Models.User

<h2 class="text-3xl font-bold mb-6 text-gray-800">Register</h2>

<form asp-action="Register" method="post" class="bg-white p-8 rounded shadow-md w-full max-w-md mx-auto">
    <div class="mb-4">
        <label asp-for="Username" class="block text-gray-700 font-semibold"></label>
        <input asp-for="Username" class="w-full px-3 py-2 border rounded" />
        <span asp-validation-for="Username" class="text-red-500"></span>
    </div>
    <div class="mb-4">
        <label asp-for="Email" class="block text-gray-700 font-semibold"></label>
        <input asp-for="Email" class="w-full px-3 py-2 border rounded" />
        <span asp-validation-for="Email" class="text-red-500"></span>
    </div>
    <div class="mb-4">
        <label asp-for="Password" class="block text-gray-700 font-semibold"></label>
        <input asp-for="Password" type="password" class="w-full px-3 py-2 border rounded" />
        <span asp-validation-for="Password" class="text-red-500"></span>
    </div>
    <button type="submit" class="w-full bg-green-600 text-white py-2 rounded hover:bg-green-500 transition">Register</button>
    <p class="mt-4 text-sm text-gray-600">Already have an account? <a asp-action="Login" class="text-blue-600 hover:underline">Login</a></p>
</form>
