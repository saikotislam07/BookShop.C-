@model IEnumerable<BookShop.Models.Book>
@{
    ViewData["Title"] = "Books";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Books</h2>
    <a class="btn btn-primary" asp-action="Create">Add Book</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>ISBN</th>
            <th>Published</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BookId</td>
                <td>@b.Title</td>
                <td>@b.Author</td>
                <td>@b.Price</td>
                <td>@b.ISBN</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@b.BookId">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@b.BookId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
