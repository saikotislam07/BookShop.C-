@model IEnumerable<BookShop.Models.BookInShop>

<h2>Books in Shops</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add Book to Shop</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Book</th>
            <th>Shop</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.Shop.Name</td>
                <td>@item.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookInShopId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.BookInShopId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
